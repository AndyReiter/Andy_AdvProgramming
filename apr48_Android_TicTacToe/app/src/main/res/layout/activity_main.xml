<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv0"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button1"
        android:layout_alignTop="@+id/button1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignEnd="@+id/relative1"
        android:layout_alignTop="@+id/relative1"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button3"
        android:layout_alignTop="@+id/button1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button1"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button1"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="103dp"
        android:layout_height="99dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button3"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button4"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv7"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button9"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button4"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv8"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/reset"
        android:visibility="invisible" />

    <Button
        android:id="@+id/userFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="User First" />

    <Button
        android:id="@+id/computerFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv5"
        android:layout_alignTop="@+id/userFirst"
        android:layout_weight="1"
        android:text="Computer First" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/board"
        android:visibility="invisible">


    </RelativeLayout>
</RelativeLayout>
